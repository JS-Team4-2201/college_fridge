                  <div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="add-title">Add a Recipe</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <form action="/recipes" method="POST">
                            <div class="form-group">
                              <label for="recipe-name" class="col-form-label">Recipe Name:</label>
                              <input type="text" class="form-control" name="title">
                            </div>
                            <div class="form-group">
                              <label for="ingredients" class="col-form-label">Ingredients:</label>
                              <input class="form-control" name="ingredients"></input>
                            </div>
                            <div class="form-group">
                                <label for="link-to-recipes" class="col-form-label">Link to Recipe:</label>
                                <input class="form-control" name="recipeUrl"></input>
                            </div>
                            <div class="form-group">
                                <label for="link-to-recipes" class="col-form-label">Photo of Recipe:</label>
                                <input class="form-control" name="imageUrl"></input>
                            </div>
                          </form>
                        </div>
                        <div class="modal-footer">
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div id="update-modal" class="modal">
                    <!-- Modal content -->
                    <div class="modal-content">
                      <span class="close">&times;</span>
                      <form action="/recipes" method="PUT">
                        <input type="text" placeholder="Recipe name" name="title">
                        <input type="text" placeholder="Ingredients" name="ingredients">
                        <input type="text" placeholder="Link to recipes (if available)" name="recipeUrl">
                        <input type="text" placeholder="Photo of recipe" name="imageUrl">
                        <button type="submit">Submit</button>
                      </form>
                    </div>
                  
                  </div>

                  <div id="delete-modal" class="modal">
                    <!-- Modal content -->
                    <div class="modal-content">
                      <span class="close">&times;</span>
                      <form action="/recipes" method="DELETE">
                        <input type="text" placeholder="Enter name of recipe you want to delete" name="title">
                        <button type="submit">Submit</button>
                      </form>
                    </div>
                  
                  </div>
                  

                
                <div class="result-container d-flex flex-wrap justify-content-evenly"></div>
            </section>
        </div>
    </div>
    <% for(var i = 0; i < recipes.length; i++) {%>
        <li class="recipes">
        <!-- Output name from the iterated quote object -->
            <span><%= recipes[i].title %></span>:
        <!-- Output quote from the iterated quote object -->
            <span><%= recipes[i].ingredients %></span>
        </li>
    <% } %>
